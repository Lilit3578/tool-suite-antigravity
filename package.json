{
    "name": "tool-suite-antigravity",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "desktop": "npm run tauri dev --workspace=@app/desktop",
        "web": "npm run dev --workspace=web",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "turbo": "latest",
        "prettier": "^3.0.0"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}